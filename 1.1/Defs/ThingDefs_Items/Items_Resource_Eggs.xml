<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!-- Fury Egg -->


	<ThingDef ParentName="EggFertBase">
		<defName>RttR_EggFuryFertilized</defName>
		<label>fury egg (fert.)</label>
		<description>Fertilized fury egg. It can be eaten raw, but it's much, much better cooked. If all goes well, it should hatch into a fury.</description>
		<tradeability>None</tradeability>
		<statBases>
			<MarketValue>9.0</MarketValue>
			<Nutrition>.25</Nutrition>

		</statBases>
		<graphicData>
			<texPath>Things/Item/EggDragon</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<comps>
			<li Class="RttRAnimalBehaviours.CompProperties_ExplodingHatcher">
				<hatcherDaystoHatch>10</hatcherDaystoHatch>
				<hatcherPawn>RttR_Fury</hatcherPawn>
				<range>4</range>
				<damageDef>Flame</damageDef>
				<damage>20</damage>
				<soundDef>Explosion_Flame</soundDef>
			</li>
		</comps>
	</ThingDef>

